@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="container stylization maincont">
    <h1 class="main-ttl"><span>@ViewData["Title"]</span></h1>
    <div class="auth-wrap">
        <div class="auth-col">
            <form id="registerForm" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" method="post">
               
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <p>
                    <label for="Input_Email">Email <span class="required">*</span></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </p>
                <p>
                    <label for="Input_Password">Password <span class="required">*</span></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </p>
                <p>
                    <label for="Input_ConfirmPassword">Confirm Password <span class="required">*</span></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" type="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </p>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
